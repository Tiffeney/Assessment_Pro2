<div class="container">
    <div class="jumbotron text-center">
        <h1>Wacky Widget</h1>
    </div>
    <div class="container">
        <div class="text-center">
            <h3>No Widgets Exist</h3>

        </div>
    <hr>

    

    <table class="table table-striped">
        <thead class="thead-dark">
            <th>Description</th>
            <th>Quantity</th>
            <th>Remove</th>
        </thead>
        <tbody>


    <div class="column">
        <h4>Add a New Widget: </h4>
    <%= form_for(@widget, url: widgets_path) do |f| %>
        <div class="form-group">
                <%= f.label :description %>
                <%= f.text_field :description, { :class => "form-control"} %>
            </div>
            <div class="form-group">
                <%= f.label :quantity %>
                <%= f.number_field :quantity, { :class => "form-control"} %>
            </div>
                <%= f.submit "Add Widget", class: "btn btn-success" %>
            <% end %>
    </div>

        

