<%= form_for(@widget) do |f| %>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, { :class => "form-control"} %>
    </div>
    <div class="form-group">
        <%= f.label :quantity %>
        <%= f.number_field :quantity, { :class => "form-control"} %>
    </div>
        <%= f.submit "Add Widget", class: "btn btn-success" %>
    <% end %>

    